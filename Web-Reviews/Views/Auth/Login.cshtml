@model Shared.DataTransferObjects.UserForAuthenticationDTO
<div class="card-body d-flex flex-column align-items-center">
    
    <form class="text-center" asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="UserPersonalData">Логин</label>
            <input asp-for="UserPersonalData" type="text" name="UserPersonalData" class="form-control" placeholder="Логин"/>
            <div>
                <span asp-validation-for="UserPersonalData" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" name="Password" class="form-control" placeholder="Пароль"/>
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-primary d-block w-100">Войти</button>
        </div>
    </form>
    <p><a href="/" class="nav-link px-0 text-primary">Забыли пароль?</a></p>
    <p><a href="/registration" class="nav-link px-0 text-primary">Создать аккаунт</a></p>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>