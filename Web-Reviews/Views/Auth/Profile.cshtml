@using Web_Reviews.ViewModels
@model Shared.DataTransferObjects.UserDTO
@{
    var _base64Img = Convert.ToBase64String(Model?.Photo ?? new byte[]{});
    List<VideoRatingViewModel> _listRatings = new();
}

<div class="card-body d-flex flex-column align-items-center">
    <img src="data:image/png;base64,@_base64Img" alt="Фото не найдено :(" class="m-3"/>
    <p class="m-2">@Model?.Nickname</p>
        
    <table>
        <caption>Ваши отзывы</caption>
        <thead>
        <tr>
            <th>Фото</th>
            <th>Название</th>
            <th>Ваш рейтинг</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in _listRatings)
        {
            <tr>
                <td><img src="data:image/png;base64,@item.PhotoBase64" alt=""/></td>
                <td>@item.Title</td>
                <td>@item.Rating</td>
            </tr>
        }
        </tbody>
    </table>
</div>